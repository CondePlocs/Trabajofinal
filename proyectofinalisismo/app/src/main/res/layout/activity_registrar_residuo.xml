<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="35dp"
            android:elevation="8dp"
            android:backgroundTint="#89FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar Residuo"
                    android:fontFamily="@font/bebita"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdosc"
                    android:layout_gravity="center" />

                <!-- Campo Tipo de Residuo (Desplegable + Manual) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Residuo"
                    android:fontFamily="@font/bebita"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTipoResiduo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selecciona o escribe el tipo"
                    android:textColorHint="@color/white"
                    android:fontFamily="@font/zeloso"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:background="@android:drawable/editbox_background"
                    android:backgroundTint="@color/verdoly"
                    android:padding="12dp" />

                <!-- Campo Estado del Residuo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado del Residuo"
                    android:fontFamily="@font/bebita"
                    android:textColor="@color/verdosc"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteEstadoResiduo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:hint="Selecciona el estado del residuo"
                    android:fontFamily="@font/zeloso"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:background="@android:drawable/editbox_background"
                    android:backgroundTint="@color/verdoly"
                    android:padding="12dp" />

                <!-- Campo Cantidad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad (kg)"
                    android:fontFamily="@font/bebita"
                    android:textColor="@color/verdosc"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese la cantidad en kg"
                    android:fontFamily="@font/zeloso"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:inputType="numberDecimal"
                    android:background="@android:drawable/editbox_background"
                    android:backgroundTint="@color/verdoly"
                    android:padding="12dp" />

                <!-- Campo Descripción (Opcional) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción (opcional)"
                    android:textSize="20sp"
                    android:textColor="@color/verdosc"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bebita"/>

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Añade una breve descripción"
                    android:textColorHint="@color/white"
                    android:inputType="textMultiLine"
                    android:background="@android:drawable/editbox_background"
                    android:backgroundTint="@color/verdoly"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:minLines="3"
                    android:fontFamily="@font/zeloso"/>

                <!-- Botón Registrar -->
                <Button
                    android:id="@+id/btnRegistrarResiduo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar Residuo"
                    android:layout_marginTop="24dp"
                    android:textSize="20dp"
                    android:drawableRight="@drawable/register"
                    android:fontFamily="@font/bebita"
                    android:backgroundTint="#2D4134"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />
                <Button
                    android:id="@+id/btnsaslir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Volver al menú"
                    android:textSize="15dp"
                    android:fontFamily="@font/bebita"
                    android:backgroundTint="#2D4134"
                    android:textColor="@android:color/white"
                    android:drawableRight="@drawable/back"
                    android:padding="12dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

